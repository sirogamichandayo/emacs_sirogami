#include <bits/stdc++.h>
using namespace std;

using ll = long long;

constexpr ll MOD = 1e9+7;
constexpr ll INF = 1ll<<60;

#define FOR(i,a,b) for (ll i=(a);i<(b);++i)
#define REP(i,n) FOR(i,0,n)
#define ALL(v) (v).begin(),(v).end()

int main(int argc, char **argv)
{
	ll N, X; cin >> N >> X;
	string s = "P";

	FOR(i, 1, N+1)
	{
		s = 'B' + s + 'P' + s + 'B';
	}

	std::cout << s << std::endl;
	
}
