#include <bits/stdc++.h>
using namespace std;
using ll = long long;

int n, k;
vector<int> h(100000);

int main(int argc, char **argv)
{
	cin >> n >> k;
	for (int i = 0; i < n; ++i) cin >> h[i];

	k = min(k, n);

	sort(v.begin(), v.end(), greater<int>());
	for (int i = 0; i < k; ++i)
		h[i] = 0;

	int sum = enumerate(v.begin(), v.end(), 0);
	std::cout << sum << std::endl;
}
