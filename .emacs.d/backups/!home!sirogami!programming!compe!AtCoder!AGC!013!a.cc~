 #include <bits/stdc++.h>
using namespace std;
using ll = long long;

int main(int argc, char **argv)
{
	ll n; cin >> n;
	vector<ll> a(n); for (int i = 0; i < n; ++i) cin >> a[i];

	ll res{0};
	for (int i = 0; i < n;)
	{
		ll i1, i2;
		ll j;
		if (a[i] <= a[i+1])
		{
			// not decrease
			for (i1 = i + 1; i1 < n || a[i] < a[i+1]; ++1i);
		}

		if (a[i] >= a[i+1])
		{
			// not increase
			for (i2 = i + 1; i2 < n || )
		}

		res++;
	}
}
