#include <bits/stdc++.h>
using namespace std;
using ll = long long;

ll getHeight(ll x, ll cx, ll y, ll cy, ll h)
{
	return max(h - abs(x - cx) - abs(y - cy), 0ll);
}

int main(int argc, char **argv)
{
	ll N; cin >> N;
	vector<ll> X(N), Y(N), H(N);
	int index{-1};
	for (ll i = 0; i < N; ++i)
	{
		cin >> X[i] >> Y[i] >> H[i];
	}

	ll x, y, h;
	for (x = 0; x <= 100; ++x)
	{
		for (y = 0; y <= 100; ++y)
		{
			h = 
			bool flag{true};
			for (ll i = 0; i < N; ++i)
			{
			}
			if (flag) goto exit;
		}
	}
 exit:
	std::cout << x << " " << y << " " << h << std::endl;
}
